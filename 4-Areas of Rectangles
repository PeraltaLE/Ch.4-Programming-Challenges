// PeraltaLE
//
// Areas of Rectangles
//
// The area of a rectangle is the rectangle's length times its width.
// Write a program that asks for the length and width of two rectangles.
//
// The program should tell the user which rectangle has the greater area, or if the areas are the same.
#include <iostream>
using namespace std;

int main() {

	int len1, len2, 
	    wid1, wid2, 
	    rect1, rect2;

	cout << "Enter the length and width of the first rectangle" << endl;
	cout << "Length: ";
	cin >> len1;
	cout << "Width: ";
	cin >> wid1;

	cout << "\nEnter the length and width of the second rectangle" << endl;
	cout << "Length: ";
	cin >> len2;
	cout << "Width: ";
	cin >> wid2;

	rect1 = len1 * wid1;
	rect2 = len2 * wid2;

	cout << "--------------------------------------------------" << endl;

	if (rect1 < rect2)
		cout << "\nThe second rectangle has a bigger area" << endl;
	else if (rect1 > rect2)
		cout << "\nThe first rectangle has a bigger area" << endl;
	else
		cout << "\nBoth rectangles have the same areas" << endl;

	return 0;
}
